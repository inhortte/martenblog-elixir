<%= EEx.eval_file("./web/static/head-schema.eex", []) %>
<div class="panel panel-primary">
  <div class="panel-title"><h4>Blog -</h4></div>
  <div class="panel-body">
    <div class="row-fluid">
      <div class="col6 margin-bottom">
        <div class="pagination" aria-hidden="false" aria-label="Pagination">
          <ul aria-disabled="false" class="pagination b-pagination">
            <%= for page <- pages do %>
              <%= if Map.has_key?(page, :separator) do %>
                <li role="separator" >
                  <span class="btn btn-default">â€¦</span>
                </li>
              <% else %>
                <%= if page.disabled do %>
                  <li aria-hidden="true">
                    <%= if Map.has_key?(page, :active) && page.active do %>
                      <span aria-label="<%= page.aria_label %>" class="btn btn-default active" aria-disabled="true"><%= page.label %></span>
                    <% else %>
                      <span aria-label="<%= page.aria_label %>" class="btn btn-default" aria-disabled="true"><%= page.label %></span>
                    <% end %>
                  </li>
                <% else %>
                  <li>
                    <a href="<%= page.link %>" class="btn btn-default" aria-label="<%= page.aria_label %>" target="_self" aria-current="page"><%= page.label %></a>
                  </li>
                <% end %>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="col10 offset1">
        <%= content %>
      </div>
    </div>
  </div>
</div>
<%= EEx.eval_file("./web/static/foot-schema.eex", []) %>
